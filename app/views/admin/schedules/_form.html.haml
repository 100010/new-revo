= form_for [:admin, @schedule],  html: {role: 'form', class: "form-horizontal"} do |f|
  = f.error_messages!
  .form-group
    = f.label :title, class: "col-sm-3 control-label"
    .col-sm-9= f.text_area :title, class: "form-control", required: true
  .form-group
    = f.label :month, class: "col-sm-3 control-label"
    .col-sm-9
      = f.number_field :month, class: "form-control", required: true
  .form-group
    = f.label :day, class: "col-sm-3 control-label"
    .col-sm-9= f.number_field :day, class: "form-control", required: true
  .form-group
    .col-sm-4.col-sm-offset-3= f.submit "Done", class: "btn btn-primary"
