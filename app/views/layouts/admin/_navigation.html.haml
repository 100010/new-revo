%nav.navbar-default.navbar-static-side{:role => "navigation"}
  .sidebar-collapse
    %ul#side-menu.nav.metismenu
      %li.nav-header
        .dropdown.profile-element
          %span
            = image_tag "admin_cover.png", width: '40px', class: "img-circle img-responsive"
          %a.dropdown-toggle{"data-toggle"=>"dropdown", href: "#"}
            %span.clear
              %span.block.m-t-xs
                %strong.font-bold User Name
              %span.text-muted.text-xs.block User Permission
        .logo-element IN+
      %li{class: is_active_controller_and_action('admin/dashboards', 'index')}
        = link_to admin_path do
          %i.fa.fa-th-large
          %span.nav-label dashboards
      %li{class: is_active_controller('admin/members')}
        %a
          %i.fa.fa-user
          %span.nav-label= t('activerecord.models.member')
          %span.fa.arrow
        %ul.nav.nav-second-level
          %li{class: is_active_controller_and_action('admin/members', 'index')}= link_to "一覧", admin_members_path
          %li{class: is_active_controller_and_action('admin/members', 'new')}= link_to "追加", new_admin_member_path
      %li{class: is_active_controller('admin/schedules')}
        %a
          %i.fa.fa-calendar
          %span.nav-label= t('activerecord.models.schedule')
          %span.fa.arrow
        %ul.nav.nav-second-level
          %li{class: is_active_controller_and_action('admin/schedules', 'index')}= link_to "一覧", admin_schedules_path
          %li{class: is_active_controller_and_action('admin/schedules', 'new')}= link_to "追加", new_admin_schedule_path
